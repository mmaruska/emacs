 lisp/org/org-exp-blocks.el |   11 ++---------
 1 file changed, 2 insertions(+), 9 deletions(-)

diff --git a/lisp/org/org-exp-blocks.el b/lisp/org/org-exp-blocks.el
index 89a0e5e..c753937 100644
--- a/lisp/org/org-exp-blocks.el
+++ b/lisp/org/org-exp-blocks.el
@@ -242,15 +242,8 @@ which defaults to the value of `org-export-blocks-witheld'."
 
 ;;--------------------------------------------------------------------------------
 ;; ditaa: create images from ASCII art using the ditaa utility
-(defcustom org-ditaa-jar-path (expand-file-name
-			       "ditaa.jar"
-			       (file-name-as-directory
-				(expand-file-name
-				 "scripts"
-				 (file-name-as-directory
-				  (expand-file-name
-				   "../contrib"
-				   (file-name-directory (org-find-library-dir "org")))))))
+
+(defcustom org-ditaa-jar-path "/usr/share/ditaa/ditaa.jar"
   "Path to the ditaa jar executable."
   :group 'org-babel
   :type 'string)
